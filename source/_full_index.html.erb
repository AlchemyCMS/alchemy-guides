<% guides.each do |name, list| %>
  <h3><%= name %></h3>

  <dl>
    <% list.each do |guide| %>
      <dt><%= guide_link(guide) %><% if guide["construction"] %>&nbsp;<em>Under construction</em><% end %></dt>
      <dd>
        <p><%= guide["text"] %></p>
      </dd>
    <% end %>
  </dl>
<% end %>

